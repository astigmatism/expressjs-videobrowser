{
	"mediaRoot": "public/media",
	"thumbRoot": "public/thumbs",
	"webThumbRoot": "/thumbs",
	"webMediaRoot": "/media",
	"previewFilename": ".preview-manifest",
	"images": {
		"prefix": "{{i}}",
		"ext": "png"
	},
	"videos": {
		"prefix": "{{v}}",
		"ext": "png"
	},
	"patterns": {
		"image": "\\.(jpe?g|png|gif|bmp)$",
		"video": "\\.(avi|wmv|mp4|m4v|mpg|mkv|mov|flv)$",
		"avoid": "\\.(db|zip|txt|url)$"
	},
	"videoThumbSize": {
		"width": 300
	},
	"framesPerAxis": 5
}